{
  "name": "zod-prisma-utils",
  "version": "0.0.4",
  "description": "A Zod schema type validator for Prisma models",
  "private": false,
  "repository": "https://github.com/wladiston/zod-prisma-utils",
  "scripts": {
    "build": "tsup --entry src/index.ts --entry src/schema.ts --format esm,cjs --dts",
    "ci": "turbo build check-exports lint",
    "check-exports": "check-export-map",
    "lint": "tsc",
    "changeset": "changeset",
    "release": "turbo run publish",
    "publish": "changeset publish"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.mjs",
      "default": "./dist/schema.js"
    }
  },
  "keywords": [],
  "author": "Wlad Paiva",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.14.0",
    "check-export-map": "^1.3.0",
    "tsup": "^6.6.3",
    "tsx": "^3.12.3",
    "turbo": "^1.8.1",
    "type-fest": "^3.6.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "decimal.js": "^10.0.0",
    "zod": "^3.0.0"
  },
  "peerDependencies": {
    "decimal.js": "^10.0.0",
    "zod": "^3.0.0"
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "all",
    "semi": true,
    "printWidth": 80,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false
  }
}
